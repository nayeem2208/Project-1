                            <tr class="cardDataClass">
                                {{!-- <td>
                                    {{inc @index}}
                                </td> --}}
                                <td>
                                    <div class="media">
                                        <div class="image-container d-flex">
                                            <a href="/loadProductview?id={{this.id}}">
                                                <img src="/public/images/products/{{this.image}}"
                                                    style="height: 30vh;width:100%" alt="{{this.products.[0].image}}">


                                            </a>
                                        </div>

                                    </div>
                                </td>
                                <td>
                                    <h4>{{this.pname}}</h4>
                                </td>
                                <td>
                                    <p style="color: black; margin-bottom: 0;">â‚¹{{this.price}}</p>
                                </td>
                                <td>

                                    <p style="color: black; margin-bottom: 0;">{{this.description}}</p>
                                </td>
                                <td>
                                    <h5><span class="totalPriceClass">{{this.status}}</span></h5>

                                </td>
                                <td>
                                    <div class="d-flex align-items-start">

                                        <a class="  btn-sm" href="/loadProductview?id={{this.id}}"
                                            style="background:linear-gradient(90deg, rgba(173, 17, 155, 0.842) 0%, rgb(50, 0, 233) 100%) ;color: rgb(255, 255, 255);">AddtoCart
                                        </a>
                                </td>
                                <td>

                                    <button class="  btn-sm" onclick="confirmRemove('{{this.id}}')"
                                        style="background:linear-gradient(90deg, rgba(10, 13, 202, 0.842) 0%, rgb(255, 0, 0) 100%) ;color: rgb(255, 255, 255);">
                                        Remove</button>

                </div>
                </td>
                </tr>
                {{/each}}
                {{else}}
                <h1>There is nothing in your wishlist</h1>

                    <img src="/public/images/storytelling_assets_2_new_thumbnail.gif" style="height: 45vh;" class="ms-5" alt="">
               
                {{/if}}
                </tbody>
                </table>
            </div>
        </div>

<body>
    <div id="preloader"></div>
    {{>userheader1}}
    <div style="height: 14vh;"></div>
    <div class="container mt-5 mb-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 ">
                <div class="card ">
                    <div class="d-flex justify-content-center">
                        <div class="col-md-6">
                            <div class="images p-3">

                                <div class="text-center mb-4">
                                    <img id="main-image" src="/public/images/products/{{initial}}" width="300"
                                        data-zoom-image="/public/images/products/{{initial}}" class="product-image" />
                                </div>
                                <div class="thumbnail text-center" id="thumbnail">
                                    {{#each product}}
                                    {{#each this.images}}
                                    <img onclick="change_image(this)" src="/public/images/products/{{this}}" width="70"
                                        class="zoomGallery">
                                    {{/each}}
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="product p-4 ">
                                <div class="d-flex justify-content-between align-items-center">

                                    <div>
                                        {{#each product}}
                                        <h3 class="text-uppercase">{{this.name}}<span style="font-size: small;"
                                                class="ms-2">{{this.category}}</span></h3>
                                        <div class="price d-flex flex-row align-items-center  "
                                            style="margin-top: -8vh;">
                                            {{#if this.price}}
                                            <h4><span class="dis-price">
                                                    <div class="s_product_text">
                                                        <h2>₹{{this.price}}</h2>
                                                    </div>
                                                    {{!-- <i>₹{{this.price}}</i> --}}
                                                </span> </h4>
                                            {{/if}}
                                        </div>
                                    </div>
                                    <p class="about">{{this.category}}</p>
                                    <p class="about"><span style="font-size: medium;">{{this.description}}</span> </p>

                                    {{/each}}
                                    <form action="/addtocart" method="post" id="addToCartForm"
                                        enctype="multipart/form-data">

                                        <input type="text" value="{{product_id}}" name="proid" hidden>
                                        <div class="sizes mt-5">
                                            <h6 class="text-uppercase">Size</h6>
                                            <label class="radio">
                                                <input type="radio" name="size" value="S" checked>
                                                <span>S</span>
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="size" value="M">
                                                <span>M</span>
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="size" value="L">
                                                <span>L</span>
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="size" value="XL">
                                                <span>XL</span>
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="size" value="XXL">
                                                <span>XXL</span>
                                            </label>
                                        </div>

                                        <div class="card_area d-flex align-items-center mt-4">
                                            <button type="submit" class="primary-btn btn me-4"> Add to Cart</button>
                                            {{!-- <a class="icon_btn me-3" href="#"><i
                                                    class="lnr lnr lnr-diamond"></i></a> --}}
                                            <a onclick="addToWishlist('{{this._id}}')"><i class="bi bi-heart"
                                                    style="font-size:4vh;"></i></a>
                                        </div>
                                    </form>

                                    <p>{{message}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{>userfooter}}
    </div>


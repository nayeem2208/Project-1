<body>
  <div id="preloader"></div>
  {{>userheader1}}
  <div style="height: 14vh;"></div>

  <!-- Inside the 'editAddress.hbs' file -->
  <div class="container mt-5">
    <form action="/editUserSubmit" method="POST" enctype="multipart/form-data" >
      <h1 style="color: rgba(255, 255, 255, 0.767);">Edit Userdetails</h1>

      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="firstName" class="form-label">First Name:</label>
          <input type="text" id="firstName" name="fname" value="{{user.firstname}}" class="form-control" min="5"
            required>
        </div>
        <div class="col-md-6 mb-3">
          <label for="lastName" class="form-label">Last Name:</label>
          <input type="text" id="lastName" name="sname" value="{{user.secondname}}" class="form-control" min="1"
            required>
        </div>
      </div>
      <div class="mb-3">
        <label for="phone" class="form-label">Phone:</label>
        <input type="text" id="phone" name="phone" value="{{user.phone}}" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="landPhone" class="form-label">Land Phone:</label>
        <input type="text" id="landPhone" name="landPhone" value="{{user.landPhone}}" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="landPhone" class="form-label">Image:</label>
        <input type="file" name="image" id="image" onchange="editimageView(event)">
       
      </div>

      {{#if user.image}}
      <div>
         <img id="preview" src="/public/images/users/{{this}}" alt="Preview"
          style="display: none; max-width: 200px; margin-top: 10px;">
      </div>
      {{/if}}

      {{!-- <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" id="email" name="email" value="{{user.email}}" class="form-control" readonly>
      </div> --}}
      <button type="submit" class="primary-btn btn  mt-4">Update Details</button>
    </form>
    {{!-- <img src="/public/images/editpro.jpeg" style="height: 100vh;" class="mt-4" alt=""> --}}
  </div>

  {{>userfooter}}

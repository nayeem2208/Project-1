<body>
    <div id="preloader"></div>
    {{>userheader1}}
    <div style="height: 14vh;"></div>

    <div class="container mt-5 mb-4">
        <div class="form-container ">
            <h1 class="mb-3" style="color: #303030;display: flex; justify-content: center">Add Address</h1>

            <form action="/submitForm" method="post">
                <div class="form-group">
                    <label for="house-name">House Name</label>
                    <input type="text" class="form-control" id="houseName" name="houseName">
                </div>

                <div class="form-group">
                    <label for="location">Location</label>
                    <input type="text" class="form-control" id="location" name="location">
                </div>
                <div class="form-group">
                    <label for="landmark">Landmark</label>
                    <input type="text" class="form-control" id="landmark" name="landmark">
                </div>
                <div class="form-group">
                    <label for="state">District</label>
                    <input type="text" class="form-control" id="state" name="district">
                </div>
                <div class="row">
                    <div class="form-group col mb-4 mt-4 ">
                        <select name="state" class="custom-select">
                            <option value="State">state</option>
                            {{#each states}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>

                    </div>

                    <div class="form-group col mb-4 mt-4">
                        <select name="countries" class="custom-select">
                            <option value="country">Country</option>
                            {{#each countries}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>

                    </div>
                </div>
                <div class="form-group mb-4 mt-4">
                    <label for="type">Address type/Name</label>
                    <input type="text" name="type" class="form-control">

                </div>
                <div class="form-group mb-5">
                    <label for="pincode">Pincode</label>
                    <input type="text" class="form-control" id="pincode" name="pincode">
                </div>
                <div class="form-group mb-4 mt-4" style="display: flex; justify-content: center;">
                    <button type="submit" class="primary-btn ">Submit</button>
                </div>

            </form>
        </div>
        <div class="img-container mt-4">
            <img src="/public/images/Nike Blazer Mid â€™77 VNTG.jpeg" alt="" style="border-radius: 5%;">
        </div>
    </div>
    {{>userfooter}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"

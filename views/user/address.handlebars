    <style>
        .container {
            display: flex;
            flex-wrap: wrap;
        }

        .form-container {
            flex: 1;
            padding-right: 20px;
            max-width: 100%;
        }

        .img-container {
            flex: 1;
            max-width: 100%;
            text-align: center;
        }

        .img-container img {
            max-width: 100%;
            height: auto;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

            .form-container,
            .img-container {
                padding-right: 0;
            }
        }

        .custom-select {
            background-color: #f2f2f2, 0.7;

            border: none;
            border-radius: 4px;

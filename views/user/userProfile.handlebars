  <div class="container ">
    <div class="card mt-3 mb-3 me-5" style="background-color: #fffffff3;">
      <div class="card-body shadow">
        <h1 class="card-title text-center">{{user.name}}</h1>
        <h6 style="font-size: x-small; text-align: center;"><b>Basic Details</b></h6>
        <div class="container">
          <div class="row">
            <div class="col-md-3">
              <img src="/public/images/{{user.image}}" alt="{{user.image}}"
                style="width: 100%; max-height: 40vh; border-radius: 10px;">
            </div>
            <div class="col-md-9">

              <div class="profile-details">
                <table class="mt-4 mb-4">
                  <tbody>
                    <tr>
                      <td>First Name:</td>
                      <td>{{user.firstname}}</td>
                    </tr>
                    <tr>
                      <td>Second Name:</td>
                      <td>{{user.secondname}}</td>
                    </tr>
                    <tr>
                      <td>Email:</td>
                      <td>{{user.email}}</td>
                    </tr>
                    <tr>
                      <td>Phone:</td>
                      <td>{{user.phone}}</td>
                    </tr>
                    <tr>
                      <td>Land Phone:</td>
                      <td>{{user.landPhone}}</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="text-center">
              <a href="editUser" class="primary-btn btn mt-2" style="font-size: x-small;">Edit Details</a>
            </div>

          </div>
        </div>
      </div>



      <div class="card-body text-center shadow">
        <h3 class="card-title ">Wallet</h3>
        <p><span class="profile-label me-3">Balance:</span> <span style="font-size: x-large;">â‚¹{{user.wallet}}</span>
        </p>
      </div>


      <div class="container col-10">
        {{#if addressDetails}}
        <div class="row">
          {{#each addressDetails}}
          <div class="col-lg-4 col-md-6">
            <div class="card1 mt-5 mb-5" style="background-color: #fffffff1;">
              <div class="card-body text-center">
                <h6><b>Address</b></h6>
                <table class="mt-4 mb-4">
                  <tbody>
                    <tr>
                      <td>Type:</td>
                      <td>{{type}}</td>
                    </tr>
                    <tr>
                      <td>Address:</td>
                      <td>{{housename}}</td>
                    </tr>
                    <tr>
                      <td>Landmark:</td>
                      <td>{{landmark}}</td>
                    </tr>
                    <tr>
                      <td>Location:</td>
                      <td>{{location}}</td>
                    </tr>
                    <tr>
                      <td>District:</td>
                      <td>{{district}}</td>
                    </tr>
                    <tr>
                      <td>State:</td>
                      <td>{{state}}</td>
                    </tr>
                    <tr>
                      <td>Country:</td>
                      <td>{{countries}}</td>
                    </tr>
                    <tr>
                      <td>Pincode:</td>
                      <td>{{pincode}}</td>
                    </tr>
                  </tbody>
                </table>
                <div class="profile-details">
                  <div class="d-flex justify-content-center align-items-center">
                    <a href="/deleteAddress?id={{id}}" class="align-items-center" style="color: black; bottom: 0;">
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                        class="bi bi-trash" viewBox="0 0 16 16">
                        <path
                          d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                        <path
                          d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
        {{else}}
        <h3 style="text-align: center;" class="my-5">No Address,Please add your address</h3>
        {{/if}}
      </div>
      <div class="text-center mb-3">

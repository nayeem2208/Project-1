  <style>
    body::after {
      content: "";
      background-image: url(/public/images/);
      background-size: cover;
      background-position: center;
      opacity: 0.8;
      /* Adjust the opacity value as per your preference */
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }

    b {
      color: black;
    }

    table {
      border-collapse: collapse;
      width: 100%;
    }

    th,
    td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #f2f2f2;
    }

    tbody tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    tbody tr:hover {
      background-color: #f5f5f5;
    }

    #preloader {
      background: #ffffff url(/public/images/c1bcd8a8c945b53da6b29f10a2a553c0.gif) no-repeat center center;
      background-size: 30%;
      height: 100vh;
      width: 100%;
      position: fixed;
      z-index: 100;
    }

    .card1 {
      width: 100%;
      height: 80%;
      border-radius: 50px;
      background: #e0e0e0;
      box-shadow: 20px 20px 60px #bebebe,
        -20px -20px 60px #ffffff;
    }

    .card1 {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .card-body {
      width: 100%;
    }

    @media (max-width: 767px) {
      .card1 {
        margin: 20px 0;
      }

      .table-responsive {
        overflow-x: auto;
      }

      .card-body {
        padding: 10px;
      }

      table {
        width: 100%;
        table-layout: fixed;
      }
    }

    @media (min-width: 992px) and (max-width: 1199px) {
      table {
        width: 90%;
        margin-left: auto;
        margin-right: auto;
         table-layout: fixed;
      }
    }
  </style>
</head>


<body>
    <div id="preloader"></div>
    {{>userheader1 isLogin=isLogin}}
    <div style="height: 14vh;"></div>
    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="col">
                <div class="card col-9 mt-4 my-4">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="images pt-5">

                                <div class="text-center">
                                    <img id="main-image" src="/public/images/products/{{initial}}" width="250"
                                        class="product-image" data-zoom-image="/public/images/products/{{initial}}" />
                                </div>

                                <div class="thumbnail text-center my-2">
                                    {{#each product}}
                                    {{#each this.images}}
                                    <img onclick="change_image(this)" src="/public/images/products/{{this}}" width="70"
                                        class="zoomGallery">
                                    {{/each}}
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                        <div class="productdetails col-md-6">
                            <div class="product p-5">
                                <div class="d-flex justify-content-between align-items-center">
                                </div>
                                <div class="productDetails mt-4 mb-3">
                                    {{#each product}}
                                    <span id="productCategory"
                                        class="text-uppercase text-muted brand mb-0">{{this.category}}</span>

                                    <h3 class="text-uppercase">{{this.name}}</h3>
                                    <div class="price d-flex flex-row align-items-center mb-3">
                                        {{#if this.price}}
                                        <h2 id="realPrice" class="me-4 act-price text-black "><i><span style="font-family: none;background: #121FCF;
background: linear-gradient(to right, #121FCF 0%, #CF1512 100%);
-webkit-background-clip: text;
-webkit-text-fill-color: transparent;
">â‚¹{{this.price}}</span></i></h2>

                                        {{/if}}
                                    </div>
                                    <p class="about">{{this.description}}</p>
                                    {{/each}}
                                    {{#unless stock}}
                                    <h3 style="color: #CF1512;">Out of Stock!!!</h3>
                                    {{/unless}}
                                </div>
                                <div class="sizes mt-5">
                                    <h6 class="text-uppercase">Size</h6>
                                    <form action="/addtocart" method="post" id="addToCartForm"
                                        enctype="multipart/form-data">
                                        <input type="text" value="{{product_id}}" name="proid" hidden>
                                        <label class="radio">
                                            <input type="radio" name="size" value="S" checked />
                                            <span>S</span>
                                        </label>
                                        <label class="radio">
                                            <input type="radio" name="size" value="M" />
                                            <span>M</span>
                                        </label>
                                        <label class="radio">
                                            <input type="radio" name="size" value="L" />
                                            <span>L</span>
                                        </label>
                                        <label class="radio">
                                            <input type="radio" name="size" value="XL" />
                                            <span>XL</span>
                                        </label>
                                        <label class="radio">
                                            <input type="radio" name="size" value="XXL" />
                                            <span>XXL</span>
                                        </label>
                                        <input type="hidden" value="{{productDetails._id}}" name="prodId">
                                        <input type="hidden" name="price" id="price">
                                        <div class="cart d-flex mt-4 align-items-center">
                                            {{#if isLogin}}
                                            {{#if stock}}
                                            <button type="submit" class="bigview primary-btn btn me-4"
                                                style="height: 8vh;">
                                                <p class="addtocart">Add to Cart</p>
                                            </button>

                                            <button type="submit" class="smallview btn btn me-4">
                                                <i class="bi bi-bag" style="font-size:4vh;"></i>
                                            </button>
                                            {{else}}
                                            <button type="submit" class="bigview primary-btn btn me-4"
                                                style="height: 8vh;" disabled>
                                                <p class="addtocart">Add to Cart</p>
                                            </button>
                                            <a onclick="addToWishlist('{{product_id}}')"><i class="bi bi-heart"
                                                    style="font-size:4vh;"></i></a>
                                                    {{/if}}
                                            {{else}}
                                            <h6 style="opacity: 0.5;">Please login to buy the product</h6>
                                            {{/if}}

                                        </div>
                                </div>
                                </form>
                                <p>{{message}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    {{>userfooter}}


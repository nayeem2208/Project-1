    <style>
        #preloader {
            background: #ffffff url(/public/images/c1bcd8a8c945b53da6b29f10a2a553c0.gif) no-repeat center center;
            background-size: 30%;
            height: 100vh;
            width: 100%;
            position: fixed;
            z-index: 100;
        }

        .card {
            margin: 0 auto;
            /* Center the card horizontally */
        }

        /* Add your custom styles here */

        /* Styles for screen widths up to 768px */
        @media screen and (max-width: 768px) {
            .images {
                display: flex;
                flex-direction: column;
                align-items: center;
                overflow: hidden;
            }

            body {
                font-size: 14px;
            }

            .container {
                margin-top: 20px;
                margin-bottom: 20px;
            }

            .card {
                margin: 0;
            }

            .card .col-md-6 {
                margin-bottom: 20px;
            }

            .card .col-md-6:nth-child(2) {
                margin-bottom: 0;
            }

            .images {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .thumbnail {
                margin-top: 10px;
            }

            .thumbnail img {
                width: 50px;
                margin-bottom: 10px;
            }

            .product {
                padding: 10px;
            }

            .product h3 {
                font-size: 18px;
            }

            .price {
                margin-top: 0;
            }

            .sizes {
                margin-top: 20px;
            }

            .about {
                font-size: 14px;
            }

            .card_area {
                margin-top: 20px;
            }

            .addtocart {
                font-size: xx-small;
            }

            .bigview {
                display: none;
            }

            .productdetails {
                margin-top: -10vh;
            }
        }

        @media screen and (min-width: 768px) {
            .smallview {
                display: none;
            }
        }

        /* Styles for screen widths between 992px and 1199px */
        @media (min-width: 992px) and (max-width: 1199px) {
            .card .col-md-6 {
                width: 50%;
            }
        }

        /* Styles for screen widths above 1200px */
        @media (min-width: 1200px) {
            .card .col-md-6 {
                width: 60%;
            }


        }
    </style>
